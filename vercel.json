{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://whatsapp-api-production-7606.up.railway.app/api/:path*"
    },
    {
      "source": "/auth/:path*",
      "destination": "https://whatsapp-api-production-7606.up.railway.app/auth/:path*"
    },
    {
      "source": "/whatsapp/:path*",
      "destination": "https://whatsapp-api-production-7606.up.railway.app/whatsapp/:path*"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "",
    "NEXT_PUBLIC_SOCKET_URL": "https://whatsapp-api-production-7606.up.railway.app"
  }
}