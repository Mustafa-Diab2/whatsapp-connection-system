{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://whatsapp-api-production-7606.up.railway.app/api/$1"
    },
    {
      "src": "/auth/(.*)",
      "dest": "https://whatsapp-api-production-7606.up.railway.app/auth/$1"
    },
    {
      "src": "/whatsapp/(.*)",
      "dest": "https://whatsapp-api-production-7606.up.railway.app/whatsapp/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/$1",
      "check": true
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "",
    "NEXT_PUBLIC_SOCKET_URL": "https://whatsapp-api-production-7606.up.railway.app"
  }
}