{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://YOUR_RAILWAY_BACKEND_URL/$1",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://YOUR_RAILWAY_BACKEND_URL",
    "NEXT_PUBLIC_SOCKET_URL": "https://YOUR_RAILWAY_BACKEND_URL"
  }
}