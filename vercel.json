{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://whatsapp-api-production-7606.up.railway.app/api/$1"
    },
    {
      "source": "/whatsapp/(.*)",
      "destination": "https://whatsapp-api-production-7606.up.railway.app/whatsapp/$1"
    },
    {
      "source": "/((?!api|whatsapp).*)",
      "destination": "/apps/web/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://whatsapp-api-production-7606.up.railway.app",
    "NEXT_PUBLIC_SOCKET_URL": "https://whatsapp-api-production-7606.up.railway.app"
  }
}