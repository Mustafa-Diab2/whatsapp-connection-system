# ==============================================================================
# WhatsApp CRM - Environment Variables
# Copy this file to .env and configure your values
# ==============================================================================

# ===========================
# API Configuration
# ===========================

# API server port
PORT=3001

# Environment mode (development | production)
NODE_ENV=development

# CORS allowed origins (comma-separated for multiple)
# Use * for development, specify domains for production
CORS_ORIGIN=http://localhost:3000,http://localhost

# ===========================
# Webhook Configuration
# ===========================

# URL to receive incoming message webhooks (optional)
# When a new WhatsApp message arrives, a POST request will be sent here
# Example: https://your-server.com/webhook/whatsapp
WEBHOOK_URL=

# Secret for HMAC-SHA256 signature verification (optional)
# If set, X-Signature header will be added to webhook requests
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=

# ===========================
# Frontend Configuration
# ===========================

# API base URL for frontend
# For local development without nginx: http://localhost:3001
# For production with nginx: /api
NEXT_PUBLIC_API_URL=http://localhost:3001

# Socket.io server URL
# Leave empty to use window.location.origin (for nginx setup)
# For local development: http://localhost:3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# ===========================
# Docker Configuration
# ===========================

# Exposed ports (used in docker-compose)
API_PORT=3001
WEB_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# ===========================
# Production Domain (for nginx SSL)
# ===========================

# Your domain name (used for SSL certificate)
# DOMAIN=yourdomain.com

# ===========================
# Optional Debug
# ===========================

# Enable debug logs
# DEBUG=whatsapp:*
