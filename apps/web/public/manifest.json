{
  "name": "WhatsApp CRM",
  "short_name": "WCRM",
  "description": "نظام إدارة علاقات العملاء عبر WhatsApp - إدارة المحادثات، الطلبات، الحملات والمزيد",
  "start_url": "/dashboard",
  "display": "standalone",
  "orientation": "portrait-primary",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "scope": "/",
  "lang": "ar",
  "dir": "rtl",
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "لوحة التحكم الرئيسية"
    },
    {
      "src": "/screenshots/chat.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "محادثات WhatsApp"
    },
    {
      "src": "/screenshots/mobile-chat.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "المحادثات على الموبايل"
    }
  ],
  "shortcuts": [
    {
      "name": "المحادثات",
      "short_name": "Chat",
      "description": "عرض جميع المحادثات",
      "url": "/chat",
      "icons": [{ "src": "/icons/chat-icon.png", "sizes": "192x192" }]
    },
    {
      "name": "جهات الاتصال",
      "short_name": "Contacts",
      "description": "إدارة جهات الاتصال",
      "url": "/contacts",
      "icons": [{ "src": "/icons/contacts-icon.png", "sizes": "192x192" }]
    },
    {
      "name": "الطلبات",
      "short_name": "Orders",
      "description": "عرض الطلبات",
      "url": "/orders",
      "icons": [{ "src": "/icons/orders-icon.png", "sizes": "192x192" }]
    },
    {
      "name": "الحملات",
      "short_name": "Campaigns",
      "description": "إدارة الحملات",
      "url": "/campaigns",
      "icons": [{ "src": "/icons/campaigns-icon.png", "sizes": "192x192" }]
    }
  ],
  "categories": ["business", "productivity", "utilities"],
  "prefer_related_applications": false,
  "related_applications": [],
  "share_target": {
    "action": "/chat/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*", "audio/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+whatsapp",
      "url": "/chat?phone=%s"
    }
  ],
  "handle_links": "preferred",
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "edge_side_panel": {
    "preferred_width": 400
  }
}
