{
  "name": "whatsapp-connection-suite",
  "private": true,
  "version": "1.0.0",
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm --prefix apps/api run dev\" \"npm --prefix apps/web run dev\"",
    "dev:api": "npm --prefix apps/api run dev",
    "dev:web": "npm --prefix apps/web run dev",
    "build": "npm --prefix apps/web run build",
    "test": "npm --prefix apps/web run test"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/pdf-parse": "^1.1.5",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.89.0",
    "cookie-parser": "^1.4.7",
    "multer": "^2.0.2",
    "next": "^14.2.35",
    "pdf-parse": "^2.4.5",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}